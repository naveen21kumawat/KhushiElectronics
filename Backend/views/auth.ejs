<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Login/Register</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .form-slide {
      transition: transform 0.5s ease, opacity 0.5s ease;
      position: absolute;
      width: 100%;
      left: 0;
      top: 0;
      opacity: 0;
      pointer-events: none;
      z-index: 1;
    }
    .form-slide.active {
      opacity: 1;
      pointer-events: auto;
      z-index: 2;
      transform: translateX(0);
    }
    .form-slide.left {
      transform: translateX(-100%);
    }
    .form-slide.right {
      transform: translateX(100%);
    }
  </style>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center px-4">
  <div class="relative w-full max-w-md bg-white rounded-2xl shadow-2xl p-8  overflow-hidden min-h-[460px]">
    
    <!-- Branding -->
    <!-- <div class="flex flex-col items-center mb-6">
      <i class="fas fa-laptop text-4xl text-gray-800 mb-2"></i>
      <h1 class="text-xl font-bold text-gray-800">Khushi Laptops</h1>
    </div> -->

    <!-- Login Form -->
    <div id="loginForm" class="form-slide active p-10">
      <div class="text-2xl font-bold text-gray-800 mb-6 text-center">Admin Login</div>
      <form action="/login" method="POST" class="space-y-4">
        <div>
          <label for="loginEmail" class="block text-sm font-medium text-gray-700">Email address</label>
          <input type="email" id="loginEmail" name="email" required
            class="mt-1 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 focus:ring-gray-800 focus:border-gray-800">
        </div>
        <div>
          <label for="loginPassword" class="block text-sm font-medium text-gray-700">Password</label>
          <input type="password" id="loginPassword" name="password" required
            class="mt-1 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 focus:ring-gray-800 focus:border-gray-800">
        </div>
        <button type="submit"
          class="w-full py-2 px-4 bg-gray-800 text-white font-semibold rounded-lg shadow hover:bg-gray-900 transition">Login</button>
      </form>
      <button class="w-full mt-4 text-gray-800 hover:underline text-sm" onclick="showRegister()">Don't have an account? Register</button>
    </div>

    <!-- Register Form -->
    <div id="registerForm" class="form-slide right p-10">
      <div class="text-2xl font-bold text-gray-800 mb-6 text-center">Admin Register</div>
      <form action="/register" method="POST" class="space-y-4">
        <div>
          <label for="registerEmail" class="block text-sm font-medium text-gray-700">Email address</label>
          <input type="email" id="registerEmail" name="email" required
            class="mt-1 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 focus:ring-gray-800 focus:border-gray-800">
        </div>
        <div>
          <label for="registerPassword" class="block text-sm font-medium text-gray-700">Password</label>
          <input type="password" id="registerPassword" name="password" required
            class="mt-1 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 focus:ring-gray-800 focus:border-gray-800">
        </div>
        <button type="submit"
          class="w-full py-2 px-4 bg-gray-800 text-white font-semibold rounded-lg shadow hover:bg-gray-900 transition">Register</button>
      </form>
      <button class="w-full mt-4 text-gray-800 hover:underline text-sm" onclick="showLogin()">Already have an account? Login</button>
    </div>
  </div>

  <!-- JavaScript: Form Switching -->
  <script>
    const loginForm = document.getElementById('loginForm');
    const registerForm = document.getElementById('registerForm');

    function showRegister() {
      loginForm.classList.remove('active');
      loginForm.classList.add('left');
      registerForm.classList.remove('right');
      registerForm.classList.add('active');
    }

    function showLogin() {
      registerForm.classList.remove('active');
      registerForm.classList.add('right');
      loginForm.classList.remove('left');
      loginForm.classList.add('active');
    }
  </script>
</body>
</html>
